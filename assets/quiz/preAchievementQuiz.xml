<?xml version="1.0" encoding="utf-8" ?>
<data>
	<events>
        <event id="begin">
            <click>
                <anim type="remove" animtime="0" oncomplete="0">openingText</anim>
                <function name="begin">this</function>
            </click>
        </event>
	</events>
	<!--opening text-->
    <box id="openingText" position="relative" margin-top="30" anim="top" animtime="1" ease="Bounce.easeOut" class="" z-index="1">

    	<image id="img" position="relative" margin-bottom="30" anim="none" class=""><![CDATA[http://www.placehold.it/300x200]]></image>

    	<text id="title" position="relative" anim="none"><![CDATA[<h1 class="">Multiple Choice Quiz</h1><p class="">Welcome to this short quiz.</p><p class="">Start when you're ready and good luck!</p>]]></text>

    	<button id="goBtn" position="relative" height="40" margin-top="20" display="inline-block" width="100" anim="none" event="begin" target="title" class=""><![CDATA[Let's go!]]></button>
    </box>

	 <custom type="quiz" id="myquiz" position="relative" x="0" y="0" class="">
	 	<question id="q1" event="">
			<image id="img" position="relative" margin-top="30" margin-bottom="40" anim="show" animtime="1" animdelay="0" class=""><![CDATA[http://www.placehold.it/300x200]]></image>

    		<text id="question" position="relative" x="0" margin-bottom="30" anim="show" animtime="1" animdelay="0.1" clear="both"><![CDATA[<p class="">Will I need to be a JavaScript programmer to build a quiz?</p>]]></text>

    		<box id="hcenter" position="relative" height="80" width="210" margin="0 auto" anim="none"/>

			<!--option 1 -->
			<option correct="false">
				<text id="option1_1" target="hcenter" position="absolute" width="100" margin-right="10" anim="show" animtime="1" animdelay="0.2" event="" class=""><![CDATA[<p class="p_16 white">Yes</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="true">
				<text id="option1_2" target="hcenter" position="absolute" x="110" width="100" margin-bottom="30" anim="show" animtime="1" animdelay="0.3" event="" class=""><![CDATA[<p class="p_16 white">No</p>]]></text>
			</option>
	 	</question>
	 </custom>
</data>
